<div class="novedades-admin">
  <!-- Saludo centrado -->
  <div class="row mb-4 novedades-header">
    <div class="col d-flex justify-content-center align-items-center">
      <p class="mb-0">¡Hola, {{Usuario}}!</p>
    </div>
  </div>

  <!-- Título y botón "Nuevo" -->
  <div class="row align-items-center mb-3 novedades-header">
    <div class="col d-flex justify-content-between align-items-center">
      <h3 class="mb-0">Listado de Novedades</h3>
      <a href="/admin/novedades/agregar" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Nuevo
      </a>
    </div>
  </div>

  <!-- Tabla de novedades -->
  <div class="row">
    <div class="col">
      <table class="table table-hover table-bordered shadow-sm">
        <thead class="thead-dark">
          <tr>
            <th scope="col"></th>
            <th scope="col">Título</th>
            <th scope="col" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td class="text-center">
              <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary btn-sm">
                <i class="fa-solid fa-pen"></i>
              </a>
              <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-danger btn-sm">
                <i class="fa-solid fa-trash"></i>
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>