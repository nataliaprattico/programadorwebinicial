<div class="container mt-5 pt-4">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Agregar un nuevo producto</h4>
      <form action="/admin/productos/agregar" method="post">
        <div class="form-group mb-3">
          <input type="text" class="form-control" placeholder="Nombre" name="nombre">
        </div>
        <div class="form-group mb-3">
          <input type="number" step="0.01" class="form-control" placeholder="Precio" name="precio">
        </div>
        <div class="form-group mb-3">
          <textarea class="form-control" placeholder="DescripciÃ³n" name="descripcion"></textarea>
        </div>
        <div class="form-group mb-3">
          <label for="imagen">Imagen</label>
          <input type="text" class="form-control" placeholder="Imagen (ej: limpiadorblum.jpg)" name="imagen">
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </form>
      {{#if error}}
      <p class="text-danger mt-2">{{message}}</p>
      {{/if}}
    </div>
  </div>
</div>